<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/white_round_bg"
    android:orientation="vertical"
    android:divider="@drawable/gray_divider_h"
    android:showDividers="middle"
    android:dividerPadding="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/msg_touch_bg"
        android:id="@+id/img_custom"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/xdialog_warning"
        android:visibility="visible"
        android:padding="12dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/msg_touch_bg"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/txt_title"
            android:visibility="gone"
            android:text=""
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:maxLines="3"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/txt_content"
            android:visibility="visible"
            android:text="You Guess What I Want To Say ..."
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:dividerPadding="2dp"
        android:gravity="center"
        android:divider="@drawable/gray_divider_v"
        android:showDividers="middle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/msg_touch_bg"
            android:textSize="12sp"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/txt_cancel"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:text="Cancel"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <TextView
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/msg_touch_bg"
            android:textSize="12sp"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/txt_ok"
            android:text="Ok"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:visibility="visible"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>
</LinearLayout>